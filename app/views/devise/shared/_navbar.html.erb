<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand animate__animated animate__bounceInLeft" do %>
      <%= image_tag "logo.png" %>
    <% end %>



    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <% if user_signed_in? %>
            <li class="nav-item active links-nav">
                <%= link_to "Dashboard", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item active links-nav">
              <%= link_to "Crear Servicio", new_service_path , class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
            <%# <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" /> %>
            <% if current_user.avatar.attached? %>
                <div  id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= cl_image_tag current_user.avatar.key, class: "avatar" %></div>
              <% else %>
                <div  id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= image_tag "profile-avatar.png", class: "avatar" %></div>
            <% end %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <p class="dropdown-item">@<%= current_user.username %></p>
                <%= link_to "Editar Perfil", edit_user_registration_path(current_user), class: "dropdown-item" %>
                <%= link_to "Cerrar sesión", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
              </div>
            </li>
            <% else %>
              <li class="nav-item active links-nav">
                <%= link_to "Inicio", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Servicios", "#servicios", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Características", "#caracteristicas", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Acerca de nosotros", "#nosotros", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
              </li>
              <li class="nav-item btn-nav">
                <%= link_to new_user_session_path, class: "btn text-white" do %>
                    Inicia sesión <i class="fa-solid fa-right-to-bracket"></i>
                <% end %>
              </li>
              <li class="nav-item btn-nav">
                <%= link_to new_user_registration_path, class: "btn btn-warning" do %>
                    Comienza gratis <i class="fa-solid fa-user-plus"></i>
                <% end %>
              </li>
          <% end %>
        <%# else %>
          <!--li class="nav-item"-->
            <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
          <!--/li-->
        <%# end %>
      </ul>
    </div>
  </div>
</div>
