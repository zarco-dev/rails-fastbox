<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", class: "img-navbar" %>
    <% end %>



    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <% if user_signed_in? %>
            <li class="nav-item active links-nav">
                <%= link_to "Dashboard", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <%= image_tag "profile-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <p class="dropdown-item">@<%= current_user.username %></p>
                <%= link_to "Editar Perfil", edit_user_registration_path(current_user), class: "dropdown-item" %>
                <%= link_to "Cerrar sesión", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
              </div>
            </li>
            <% else %>
              <li class="nav-item active links-nav">
                <%= link_to "Inicio", "#inicio", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Servicios", "#servicios", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Características", "#caracteristicas", class: "nav-link" %>
              </li>
              <li class="nav-item links-nav">
                <%= link_to "Acerca de nosotros", "#nosotros", class: "nav-link" %>
              </li>
              <li class="nav-item btn-nav">
                <%= link_to "Inicia Sesión", new_user_session_path, class: "btn btn-warning" %>
              </li>
              <li class="nav-item btn-nav">
                <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-warning" %>
              </li>
          <% end %>
        <%# else %>
          <!--li class="nav-item"-->
            <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
          <!--/li-->
        <%# end %>
      </ul>
    </div>
  </div>
</div>
