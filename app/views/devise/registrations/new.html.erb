<div class="sign-up-container">
  <div class="container sign-up-container-center">
    <div class='container-user'>
      <%# <%= user = button_to "hola", root_path %>
     <%#  <% if user == "hola" %>
        <%# <h1>hola</h1> %>
      <%# <% end %>
      <h2>Selecciona el tipo de usuario</h2>
      <form method="get" class="container-type-user">
        <button type="submit" class="btn-back-color" name="type" value="user"><%= image_tag "delivery-user.png", class: "img-type-user" %></button>
        <button type="submit" class="btn-back-color" name="type" value="driver"><%= image_tag "delivery-driver.png", class: "img-type-user" %></button>
      </form>
    </div>

    <% if !params[:type] %>
      <%= image_tag "back-sign.png", class: "img-background" %>
    <% elsif params[:type] == "user" %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

    <div class="form-inputs container-form">
      <h2>Crea tu cuenta <span>personal</span></h2>
        <%= f.input :username,
                    required: true,
                    autofocus: true %>
        <%= f.input :email, label: "Correo Electrónico",
                    required: true, class: "form-control-lg" %>
        <%= f.input :birth_date, label: "Fecha de nacimiento", as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 18, order: [:day, :month, :year],
                    required: true %>
        <%= f.hidden_field :user_type,
                    required: true,
                    value: "personal" %>
        <%= f.input :bonus_code, label: "¿Tienes un código de referido?",
                    required: true %>
        <%= f.input :password, label: "Contraseña",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirmar contraseña",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>

      <div class="form-actions container container-button">
        <%= f.button :submit, "Regístrate ahora", class: "btn btn-success" %>
        ó ¿Ya tienes cuenta?  <%= render "devise/shared/links" %>
      </div>
    </div>

      <% end %>
      <% elsif params[:type] == "driver" %>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

    <div class="form-inputs container-form">
      <h2>Crea tu cuenta <span>conductor</span></h2>
        <%= f.input :username,
                    required: true,
                    autofocus: true %>
        <%= f.input :email, label: "Correo Electrónico",
                    required: true, class: "form-control-lg" %>
        <%= f.input :birth_date, label: "Fecha de nacimiento", as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 18, order: [:day, :month, :year],
                    required: true %>
        <%= f.hidden_field :user_type,
                    required: true,
                    value: "driver" %>
        <%= f.input :license, as: :file, label: "Licencia de conducción" %>

        <%= f.input :password, label: "Contraseña",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirmar contraseña",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>

      <div class="form-actions container container-button">
        <%= f.button :submit, "Regístrate ahora", class: "btn btn-success" %>
        ó ¿Ya tienes cuenta?  <%= render "devise/shared/links" %>
      </div>
    </div>

      <% end %>
    <% end %>


  </div>
</div>
