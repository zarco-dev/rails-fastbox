<% price = rand(5000..40000) %>
<div class="new-container">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-12">
        <div class="card card-c">
          <div class="card-body card-card">
            <div class="row row-1">
              <div class="col-8 div-1">

                <h1>Crea tu nuevo servicio!</h1>

                <%= simple_form_for @service do |f| %>
                  <%= f.input :pickup_address, placeholder: 'Coloca tu dirección de recogida' %>
                  <%= f.input :deliver_address, placeholder: 'Coloca tu dirección de entrega' %>
                  <%= f.input :payment_method, as: :radio_buttons, collection: [['Contra-entrega', 'Contra-entrega'], ['Mi Balance', 'Mi Balance']], label_method: :second, value_method: :first %>
                  <%= f.hidden_field :pricing, value: price %>
                  <%= f.submit 'Crear servicio', class: "btn btn-warning btn-call" %>
                <% end %>
              </div>
              <div class="col-4 package-tab d-flex flex-column center-box">
                <%= image_tag "box.png" %>
                </div>

                <div class="d-flex justify-content-center">
                  <div class="container-price">
                    <p style="margin: 0 auto; padding: 0;"><strong>Precio del servicio: </strong></p>
                    <span><%= price %> COP</span>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
