                <% end %>
              </div>
              <div class="col-4 package-tab d-flex flex-column">
                <h5>A침ade paquetes a tu servicio!</h5>
                <div class="flex-grow-1">
                  <button type="button" class="btn btn-success"><strong>+</strong> A침adir paquete</button>
                </div>
                <div class="d-flex justify-content-center">
                  <p style="margin: 0 auto; padding: 0;"><strong>Precio del servicio: </strong></p>
                  <input class="form-control" type="text" value="<%= price %> COP" disabled readonly>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
